#  At first, edit MACRO, then make

#  Target  mpi or single
TARGET      = mpi

AR          = ar cru
RANLIB      = ranlib
RM          = \rm -f
MPI_DIR	    = /opt/openmpi
TP_DIR      = /usr/local/TextParser
NPT_DIR     = /usr/local/Npatchlib
MPI_OPT     = -DMPI_PL
REAL_OPT    =
NPT_OPT     = -DUSE_NPATCH_LIB
OMP_FLAGS   =
CXX         = icpc
CXXFLAGS    = -O3 $(MPI_OPT) $(REAL_OPT) $(NPT_OPT) $(OMP_FLAGS) -Wall -fno-strict-aliasing
UDEF_INC_PATH = -I$(TP_DIR)/include -I$(NPT_DIR)/include -I$(MPI_DIR)/include


