all:
	( \
	cd src; \
	make $(TAEGET) \
		CXX='$(CXX)' \
		CXXFLAGS='$(CXXFLAGS)' \
		AR='$(AR)' \
		RANLIB='$(RANLIB)' \
		RM='$(RM)' \
		UDEF_INC_PATH='$(UDEF_INC_PATH)' \
	)

clean:
	(cd src; make clean)

depend:
	(cd src; make depend)
